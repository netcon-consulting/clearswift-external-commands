{
    "Check recipient limit": {
        "media_types": {
            "SMTP": [ "not_protected" ]
        },
        "parameters": "-t \"%ITEMTYPE%\" -c \"Config - Check recipient limit\" %FILENAME% %LOGNAME% \"External command - Check recipient limit\"",
        "responses": {
            "NONE": "Limit ok",
            "DETECTED": "Limit exceeded",
            "NOT_CHECKED": "Error (%LOGTEXT%)"
        },
        "disposal_actions": {
            "detected": { "primary": "hold:Recipient limit" }
        },
        "config": {
            "recipient_limit": { "type": "integer", "description": "maximum number of recipients allowed", "value": "5" }
        }
    }
}
